    "hitmiss_cm/aa.root",
    "hitmiss_cm/a.root",
    "hitmiss_cm/z.root",
    ]
hm_lab = [
    "hitmiss_lab/z.root",
    "hitmiss_lab/a.root",
    "hitmiss_lab/aa.root",
    ]
names = [
    ("cosTheta", 3),
    ("cosETheta", 2),
    ("cosPTheta", 4),
    ]
plot.histoPlots(hm_cm, names, "CosTheta Distribution Center of Mass")
